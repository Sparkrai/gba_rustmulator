{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "(Windows) Launch",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${workspaceFolder}/target/debug/gba_rustmulator.exe",
            "args": [],
            "cwd": "${workspaceFolder}",
            "environment": [{
				"name": "RUST_BACKTRACE",
				"value": "1"
			}],
			"preLaunchTask": "cargo build",
		},
		{
            "name": "(Windows) Launch Release",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${workspaceFolder}/target/release/gba_rustmulator.exe",
            "args": [],
            "cwd": "${workspaceFolder}",
            "environment": [],
			"preLaunchTask": "cargo build release"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'gba_rustmulator'",
            "cargo": {
                "args": [
                    "build",
                    "--bin=gba_rustmulator",
                    "--package=gba_rustmulator"
                ],
                "filter": {
                    "name": "gba_rustmulator",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}",
            "sourceLanguages": ["rust"]
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in executable 'gba_rustmulator'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--bin=gba_rustmulator",
                    "--package=gba_rustmulator"
                ],
                "filter": {
                    "name": "gba_rustmulator",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        }
    ]
}